extends ../../layouts/default.pug
include ../../mixins/box-head.pug


block main
    .container.my-3
        .row
            .cow-12
            +box-head('Danh sách sản phẩn')
               
        .row
            each item in products
                .col-4.mb-3
                    .product-item
                        .inner-image
                            img(src=item.thumbnail, alt=item.title)
                        .inner-content
                            h3.inner-title #{item.title}
                            .inner-price-old Giá cũ #{item.price}
                            .inner-price-new Giá mới #{item.priceNew}
                            .inner-discount Giảm giá -#{item.discountPercentage}%
                        